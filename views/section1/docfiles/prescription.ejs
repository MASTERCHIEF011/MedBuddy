  <body>
    <%-include("../../components/Navbar"); -%>
    <%-include("../../components/Sidebar");-%>
      <div class="content-block">
        <div class="non-preview-area">
          <div class="patInfo-non-preview">
            <p>
              <span>
                Mr./Ms./Mrs.:
                <input type="text" placeholder="Name" />
              </span>
            </p>
            <p>
              <span>
                Age:
                <input type="text" />
              </span>
            </p>
            <p>
              <span>
                Address:
                <input type="text" />
              </span>
            </p>
            <p>
              <span>
                Contact:
                <input type="text" />
              </span>
            </p>
          </div>
          <div>
            <form action="">
              <div class="form-row">
                <div class="form-group col-md-4">
                  <label for="medicine">Choose a Medicine:</label>

                  <select name="medicine" id="medicine" class="form-control">
                    <option value="Norflox">Norflox</option>
                    <option value="Paracetamol">Paracetamol</option>
                    <option value="Crocin">Crocin</option>
                    <option value="Cough Syrup">Cough Syrup</option>
                  </select>
                </div>
                <div class="form-group col-md-2">
                  <label for="dosage-amount">Choose Dosage</label>

                  <select
                    name="dosage-amount"
                    id="dosage-amount"
                    class="form-control"
                  >
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                    <option value="6">6</option>
                    <option value="7">7</option>
                  </select>
                </div>
                <div class="form-group col-md-3">
                  <label for="dosage-times">Frequency</label>

                  <select
                    name="dosage-times"
                    id="dosage-times"
                    class="form-control"
                  >
                    <option value="day">day</option>
                    <option value="week">week</option>
                    <option value="month">month</option>
                  </select>
                </div>
                <div class="form-group col-md-2">
                  <button type="button" class="btn btn-success">Add</button>
                </div>
              </div>
            </form>
          </div>
          <div>
            <form action="">
              <div class="form-row">
                <div class="form-group col-md-9">
                  <label for="medicine">Choose a Test:</label>

                  <select name="medicine" id="medicine" class="form-control">
                    <option value="Blood-Test">Blood-Test</option>
                    <option value="X-Ray">X-Ray</option>
                    <option value="MRI">MRI</option>
                    <option value="CT-Scan">CT-Scan</option>
                  </select>
                </div>

                <div class="form-group col-md-2">
                  <button type="button" class="btn btn-success">Add</button>
                </div>
              </div>
            </form>
          </div>

          <div class="code-area">
            <textarea
              id="comment"
              placeholder=""
              oninput="showPreview()"
            ></textarea>
          </div>
        </div>
        <div class="preview-area">
          <div class="card-outer">
            <br />
