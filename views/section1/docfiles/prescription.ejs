            <hr />

            <i
              id="dropdown"
              class="fa fa-sort-desc"
              aria-hidden="true"
              data-toggle="collapse"
              href="#docInfo"
              role="button"
              aria-expanded="false"
              aria-controls="docInfo"
            ></i>
            <div class="docInfo collapse" id="docInfo">
              <p class="p1">
                <span id="docName">
                  <input type="text" placeholder="Name" />
                </span>
                <span id="prescNo">
                  Prescription No:
                  <input type="text" />
                </span>
              </p>
              <p class="p2">
                <span>
                  <input type="text" placeholder="MBBS" />
                </span>
                <span id="date">
                  Date:
                  <input type="text" />
                </span>
              </p>
              <p class="p3">
                <span>
                  <input type="text" placeholder="Contact" />
                </span>
              </p>
            </div>
            <hr />
            <br />
