  <script>
    function DrawTheChart(ChartData, ChartOptions, ChartId, ChartType) {
      eval(
        'var myLine = new Chart(document.getElementById(ChartId).getContext("2d"),{type:"' +
          ChartType +
          '",data:ChartData,options:ChartOptions});document.getElementById(ChartId).getContext("2d").stroke();'
      );
    }
  </script>

  <style>
    .card {
      background-color: white;
      box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 1);
      transition: 0.3s;
    }

    .div1 {
      /* background-color: blue !important; */
    }

    .div2 {
      background-color: red !important;
    }

    .div3 {
      background-color: green !important;
    }

    .div4 {
      background-color: yellow !important;
    }

    .div5 {
      background-color: pink !important;
      grid-column: 1/3;
    }

    .div6 {
      background-color: purple !important;
      grid-column: 3/5;
    }

    .div7 {
      background-color: black !important;
      grid-column: 1/5;
    }

    .div8 {
      background-color: orange !important;
      grid-column: 1/5;
    }

    main {
      /* width: 90%; */
      margin: auto;
      display: grid !important;
      grid-template-rows: 200px 450px 450px 450px;
      grid-template-columns: 1fr 1fr 1fr 1fr;
      grid-row-gap: 20px;
      grid-column-gap: 20px;
    }

    .card-icon {
      width: 50px;
      height: 50px;
      line-height: 50px;
      font-size: 22px;
      margin: 25px;
      box-shadow: 5px 3px 10px 0 rgb(21 15 15 / 30%);
      border-radius: 10px;
      background: #6777ef;
      text-align: center;
    }

    .align-middle {
      vertical-align: middle !important;
    }

    .material-icons {
      color: #fff !important;
    }

    .card-right {
      float: right;
      margin: 15px 15px 15px 0;
    }

    .m-r-10 {
      margin-right: 10px;
    }

    .m-l-10 {
      margin-left: 10px;
    }

    .pull-right {
      float: right !important;
    }

    .font-weight-bold {
      font-weight: 700 !important;
    }

    .mb-0,
    .my-0 {
      margin-bottom: 0 !important;
    }

    .h3,
    h3 {
      font-size: 1.75rem;
    }

    .clearfix:after {
      visibility: hidden;
      display: block;
      font-size: 0;
      content: " ";
      clear: both;
      height: 0;
    }

    .card-chart canvas {
      height: 70px !important;
    }

    .chartjs-render-monitor {
      animation: chartjs-render-animation 0.001s;
    }

    .chartjs-size-monitor,
    .chartjs-size-monitor-expand,
    .chartjs-size-monitor-shrink {
      position: absolute;
      direction: ltr;
      left: 0;
      top: 0;
      right: 0;
      bottom: 0;
      overflow: hidden;
      pointer-events: none;
      visibility: hidden;
      z-index: -1;
    }

    .card-chart {
      margin-left: -10px;
      margin-right: -1px;
      margin-bottom: -7px;
    }
  </style>

